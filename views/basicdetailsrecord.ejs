
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Record</title>
      <link rel="stylesheet" type="text/css" href="/css/tablecss.css">
  </head>
  <script src=
"https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js">
</script>

  <body>
    <%- include("header") -%>
    <div class="text"><center>Student Basic Details</center> </div>
    <div>
      <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for Roll Number.." title="Type in a name">
    </div>
    <div>
             <center>
                 <table class="content-table" id="myTable">
                   <tr>
                     <th width="15%">Name</th>
                     <th width="10%">Roll Number</th>
                     <th width="12%">Mobile Number </th>
                     <th width="15%">Gmail</th>
                     <th width="15%">Complete Details</th>
                     </tr>
                     <%  students.forEach(function(student){ %>
                       <tbody id="abc">
                         <tr>
                             <td>
                               <%=student.name%>
                             </td>
                             <td>
                                 <%=student.rollno%>
                             </td>
                             <td>
                               <%=student.mobileno%>
                             </td>
                             <td>
                                 <%=student.email%>
                             </td>
                             <td><a href="/students/<%=student.rollno%>">More ...</a></td>




                             </tr>
                           </tbody>
                             <% }); %>
                 </table>
                 <form>
                  <input type="button" value="Print this page" onClick="window.print()">
                  </form>
             </center>
         </div>
         <div class="print"><a class="btn btn-success" href="javascript:window.print()">PRINT </a></div>
         <script>
      			$(document).ready(function() {
      				$("#myInput").on("keyup", function() {
      					var value = $(this).val().toLowerCase();
      					$("#abc tr").filter(function() {
      						$(this).toggle($(this).text()
      						.toLowerCase().indexOf(value) > -1)
      					});
      				});
      			});
      		</script>
<%- include("footer") -%>
</body>
</html>
